@page
@model IndexModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body class="bg-gray-100 text-gray-900">

    <!-- Header -->
    <header class="bg-blue-600 text-white py-8 text-center">
        <h1 class="text-4xl font-extrabold">Welcome to Cosmos School</h1>
        <div class="img flex justify-center">
            <img class="max-w-full h-auto w-1/2"
                src="https://content.jdmagicbox.com/v2/comp/mumbai/05/022p5600205/catalogue/cosmos-english-high-school-and-junior-college-bhandup-west-mumbai-schools-34gHpTxRl7.jpg"
                class="max-w-full h-auto">
        </div>
        <p class="text-lg mt-2 leading-relaxed">
            Welcome to Cosmos School, Bhandup West! We are dedicated to nurturing young minds and fostering holistic
            development in a nurturing environment.
        </p>
        <p class="text-lg mt-2">A place of knowledge, growth, and achievement.</p>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">


        <!-- News & Announcements -->
        <section class="bg-white shadow-xl rounded-2xl p-6 mb-8">
            <h2 class="text-2xl font-bold mb-4">News & Announcements</h2>
            <ul class="list-disc list-inside text-gray-700 space-y-2">
                <li>📢 <strong>School Reopens:</strong> 1st March</li>
                <li>📝 <strong>Admission Form:</strong> Now available online</li>
                <li>🎭 <strong>Annual Day Preparations:</strong> Begin next week</li>
                <li>👩‍🏫 <strong>Parent-Teacher Meetings:</strong> Scheduled for 5th March</li>
            </ul>
        </section>

        <!-- Upcoming Events -->
        <section class="bg-white shadow-xl rounded-2xl p-6 mb-8">
            <h2 class="text-2xl font-bold mb-4">Upcoming Events</h2>
            <ul class="list-disc list-inside text-gray-700 space-y-2">
                <li>🎉 <strong>Annual Day:</strong> 10th March</li>
                <li>🏆 <strong>Sports Day:</strong> 15th March</li>
                <li>📚 <strong>Student Workshops:</strong> 20th March</li>
            </ul>
        </section>

        <!-- Quick Links -->
        <section class="bg-white shadow-xl rounded-2xl p-6 mb-8">
            <h2 class="text-2xl font-bold mb-4">Quick Links</h2>
            <ul class="space-y-3">
                <li><a href="/Admissions" class="text-blue-600 hover:text-blue-800 transition duration-200">📄
                        Admissions</a></li>
                <li><a href="/Academics" class="text-blue-600 hover:text-blue-800 transition duration-200">📚
                        Academics</a></li>
                <li><a href="/Gallery" class="text-blue-600 hover:text-blue-800 transition duration-200">🖼️ Gallery</a>
                </li>
                <li><a href="/News" class="text-blue-600 hover:text-blue-800 transition duration-200">📰 Latest News</a>
                </li>
                <li><a href="/ContactUs" class="text-blue-600 hover:text-blue-800 transition duration-200">📞 Contact
                        Us</a></li>
            </ul>
        </section>

    </main>

</body>

</html>
