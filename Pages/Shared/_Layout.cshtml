            </ul>

            <div class="hidden md:flex space-x-4">
                <a href="#" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Login</a>
                <a href="#" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-gray-600">Logout</a>
            </div>

            <!-- Mobile Menu Button -->
            <button class="md:hidden block text-gray-600 focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
